@inject NavigationManager Nav;

@code {

    static readonly (string Text, string Url)[] NavUrls =
    {
        ("Buttons", "/button"),
        ("Checkbox", "/checkbox"),
        ("Chips", "/chip"),
        ("Dialogs", "/dialog"),
        ("Dividers", "/divider"),
        ("Elevation", "/elevation"),
        ("Floating action buttons (FAB)", "/fab"),
        ("Icon Buttons", "/icon-buttons"),
        ("Menus", "/menu"),
        ("Progress", "/progress"),
        ("Radio Button", "radio-button"),
        ("Ripple", "/ripple"),
        ("Select", "/select"),
        ("Sliders", "/slider"),
        ("Switch", "/switch"),
        ("Tabs", "/tabs"),
        ("Text Fields", "/text-field"),
    };

}

<MdList>
    @foreach (var url in NavUrls)
    {
        <MdListItem Href="@(url.Url)" Headline="@(url.Text)"
                    Active="@(url == activeUrl)" />
    }
</MdList>