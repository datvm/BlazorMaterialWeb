@inject NavigationManager Nav;

@code {

    static readonly (string Text, string Url)[] ComponentUrls =
    {
        ("Setup", "/"),
        ("Features", "/features"),
        ("-", "-"),
        ("Cards", "/card"),
        ("-", "-"),
        ("Buttons", "/button"),
        ("Checkbox", "/checkbox"),
        ("Chips", "/chip"),
        ("Dialogs", "/dialog"),
        ("Dividers", "/divider"),
        ("Elevation", "/elevation"),
        ("Floating action buttons (FAB)", "/fab"),
        ("Focus Ring", "/focus-ring"),
        ("Icon", "/icon"),
        ("Icon Buttons", "/icon-buttons"),
        ("Lists", "/lists"),
        ("Menus", "/menu"),
        ("Progress", "/progress"),
        ("Radio Button", "radio-button"),
        ("Ripple", "/ripple"),
        ("Select", "/select"),
        ("Sliders", "/slider"),
        ("Switch", "/switch"),
        ("Tabs", "/tabs"),
        ("Text Fields", "/text-field"),
    };

}

<MdList Type="MdListItemType.Link">
    @foreach (var url in ComponentUrls)
    {
        @if (url.Url == "-")
        {
            <MdDivider />
            continue;
        }

        <MdListItem Href="@(url.Url)"
                    active="@(url.Url == activeUrl.Url)">
            @(url.Text)
        </MdListItem>
    }
</MdList>