@inject NavigationManager Nav;

@code {

    static readonly (string Text, string Url)[] ComponentUrls =
    {
        ("Buttons", "/button"),
        ("Checkbox", "/checkbox"),
        ("Chips", "/chip"),
        ("Dialogs", "/dialog"),
        ("Dividers", "/divider"),
        ("Elevation", "/elevation"),
        ("Floating action buttons (FAB)", "/fab"),
        ("Focus Ring", "/focus-ring"),
        ("Icon Buttons", "/icon-buttons"),
        ("Lists", "/lists"),
        ("Menus", "/menu"),
        ("Progress", "/progress"),
        ("Radio Button", "radio-button"),
        ("Ripple", "/ripple"),
        ("Select", "/select"),
        ("Sliders", "/slider"),
        ("Switch", "/switch"),
        ("Tabs", "/tabs"),
        ("Text Fields", "/text-field"),
    };

}

<MdList Type="MdListItemType.Link">
    <MdListItem Href="/"
                active="@((activeUrl?.Url?.Length ?? 0) < 2)">
        Setup
    </MdListItem>

    <MdDivider />

    @foreach (var url in ComponentUrls)
    {
        <MdListItem Href="@(url.Url)"
                    active="@(url.Url == activeUrl?.Url)">
            @(url.Text)
        </MdListItem>
    }
</MdList>