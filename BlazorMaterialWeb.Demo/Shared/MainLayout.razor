@inherits LayoutComponentBase

@inject NavigationManager Nav;

<header class="hstack page-header">
    <MdFab @onclick="@(() => menuCollapsed = !menuCollapsed)"
           Size="MdFabSize.Small">
        <MdIcon slot="icon">menu</MdIcon>
    </MdFab>

    <a href="/" class="home-link my-0">Blazor Material Web</a>

    <div class="ms-auto"></div>

    <MdIconButton Target="_blank" Href="https://github.com/datvm/BlazorMaterialWeb/">
        <img src="/img/github.svg" />
    </MdIconButton>

</header>

<div class="content">
    <nav class="page-nav @(menuCollapsed ? "collapsed" : "")">
        <PageNav />
    </nav>
    <main class="page-content-container p-3">
        <MdCard Class="page-content-card p-3">
            <div class="container-fluid page-content">
                @Body
            </div>
        </MdCard>
    </main>
</div>

@code {
    bool menuCollapsed;
}