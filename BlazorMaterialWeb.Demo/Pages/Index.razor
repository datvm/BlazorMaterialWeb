@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<p>
    <MdChipset Type="ChipType.Input">
        <MdFilterChip Label="Filter Chip" @bind-Selected="chipSelected" />
        <MdInputChip Label="Input Chip"
                     OnRemove="@(() => Console.WriteLine("Remove"))" />
    </MdChipset>
</p>

<p>
    First chip selected: @(chipSelected)
</p>

<p>
    <MdButton ButtonType="MdButtonType.Outlined">
        Back
    </MdButton>

    <MdButton ButtonType="MdButtonType.Filled">
        Complete
    </MdButton>

    <MdButton ButtonType="MdButtonType.Tonal">
        <md-icon slot="icon">send</md-icon>
        Send
    </MdButton>

    <MdButton ButtonType="MdButtonType.Outlined">
        Outlined
    </MdButton>

    <MdButton ButtonType="MdButtonType.Text">
        Text
    </MdButton>
</p>

<p>
    <MdCheckbox @bind-Checked="checkboxChecked">
        Some Label
    </MdCheckbox>

    <MdCheckbox Checked />
     <MdCheckbox Indeterminate />
 </p>

 <p>
     Checkbox checked: @(checkboxChecked)
</p>
