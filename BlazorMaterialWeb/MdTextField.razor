@typeparam TValue where TValue: IConvertible;
@inherits DefaultMdComponent

@inject IJSRuntime Js;

<DynamicTag Tag="@(TagName)" @attributes="AdditionalAttributes" @bind-DynamicElementReference="el"
            disabled="@(Disabled)"
            error="@(Error)"
            error-text="@(ErrorText)"
            label="@(Label)"
            required="@(Required)"
            prefix-text="@(PrefixText)"
            suffix-text="@(SuffixText)"
            has-leading-icon="@(HasLeadingIcon)"
            has-trailing-icon="@(HasTrailingIcon)"
            supporting-text="@(SupportingText)"
            text-direction="@(TextDirection)"
            rows="@(Rows)"
            input-mode="@(InputMode)"
            max="@(Max)"
            maxlength="@(MaxLength)"
            min="@(Min)"
            minlength="@(MinLength)"
            pattern="@(Pattern)"
            placeholder="@(Placeholder)"
            readonly="@(ReadOnly)"
            step="@(Step)"
            value="@(Value)"
            type="@(Type)"
            @onchange="OnValueChanged">
    @(ChildContent)
</DynamicTag>

